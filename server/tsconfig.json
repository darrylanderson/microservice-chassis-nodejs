{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/proto"
    ]
  },
  "include": [
    "src/**/**.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}